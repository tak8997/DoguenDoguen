<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tacademy.woof.doguendoguen.app.base.profile.PostRegist_100_Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:text="@string/post_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.25"
                android:background="#EDBC64" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.25"
                android:background="#EDBC64" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.25"
                android:background="#EDBC64" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.25"
                android:background="#EDBC64"/>
        </LinearLayout>

        <TextView
            android:text="분양할 강아지에 대한 소개글을 작성해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="강아직 성격이나 특성에 대한 구체적인 소개글을 작성해주세요. 예)성격이 활발해요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="원하는 입양 희망자에 대한 글을 작성해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="'이런 분이 입양하셨으면 좋겠다'에 관한 희망 사항을 작성해 주세요. 예)보살펴줄 가족이 많으신 분이었으면 좋겠어요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
