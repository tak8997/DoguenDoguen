<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent" android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        tools:context="org.tacademy.woof.doguendoguen.app.base.profile.AgreementFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp"
                android:src="@drawable/left_arrow_message"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true" />
            <TextView
                android:text="서비스 이용약관"
                android:textSize="15sp"
                android:textColor="#5b4319"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider"/>
        <TextView
            android:layout_marginTop="24dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:text="회원 약관 및 이용 약관"
            android:textColor="#3E3A39"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/border_layout"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="13sp"
            android:text="@string/first_agreement"
            android:layout_width="match_parent"
            android:layout_height="294dp" />

        <TextView
            android:layout_marginTop="27dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:text="개인 정보 취그 방침"
            android:textColor="#3E3A39"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/border_layout"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="13sp"
            android:text="@string/second_agreement"
            android:layout_width="match_parent"
            android:layout_height="294dp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
