<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="11dp"
    android:paddingRight="11dp">

    <TextView
        android:id="@+id/dog_age"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="134dp"
        android:gravity="center|left"
        android:completionHint="몇살된 친구를 만나볼까요?"
        android:background="@drawable/border_search_dialog"
        android:text="몇살된 친구를 만나볼까요?"
        android:textColor="#8c8c8c"
        android:textSize="14sp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:drawablePadding="11dp"
        android:drawableLeft="@drawable/dog_age"
        android:drawableRight="@drawable/icon_arrow_searchbox" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:background="@drawable/border_search_dialog"
        android:paddingLeft="45dp"
        android:paddingRight="11dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/under_four"
            android:text="2개월 이상 - 4개월 미만"
            android:textSize="14sp"
            android:textColor="#3E3A39"
            android:drawablePadding="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/under_twelve"
            android:text="4개월 이상 - 12개월 미만"
            android:textSize="14sp"
            android:textColor="#3E3A39"
            android:drawablePadding="11dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/up_twelve"
            android:text="12개월 이상"
            android:textSize="14sp"
            android:textColor="#3E3A39"
            android:drawablePadding="11dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/all_age"
            android:text="상관없음"
            android:textSize="14sp"
            android:textColor="#3E3A39"
            android:drawablePadding="11dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
    </LinearLayout>

</LinearLayout>