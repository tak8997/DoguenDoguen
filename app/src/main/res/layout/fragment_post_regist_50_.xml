<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tacademy.woof.doguendoguen.app.base.profile.PostRegist_50_Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"/>
            <TextView
                android:text="분양글 등록하기"
                android:textSize="15sp"
                android:textColor="#5b4319"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="8dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="#EDBC64"
                android:padding="1dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="#EDBC64"
                android:padding="1dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="4dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">
            <TextView
                android:id="@+id/dog_type"
                android:text="어떤 친구를 분양할까요?"
                android:textSize="15sp"
                android:textColor="#825621"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">
            <TextView
                android:id="@+id/dog_gender"
                android:text="성별은요?"
                android:textSize="15sp"
                android:textColor="#825621"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">
            <TextView
                android:id="@+id/dog_age"
                android:text="몇살인가요?"
                android:textSize="15sp"
                android:textColor="#825621"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">
            <TextView
                android:id="@+id/dog_region"
                android:text="희망 분양지역을 선택해주세요."
                android:textSize="15sp"
                android:textColor="#825621"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">
            <TextView
                android:id="@+id/dog_price"
                android:text="희망 분양 가격을 입력해주세요."
                android:textSize="15sp"
                android:textColor="#825621"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/prev_btn"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/border_next_btn"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="이전"
            android:textColor="#FF4D4D"
            android:textSize="14sp" />
        <Button
            android:id="@+id/next_btn"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/border_next_btn"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="다음"
            android:textColor="#FF4D4D"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
